@model IEnumerable<CLDV_POE.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p>
    <a asp-action="AddCustomer">Create New</a>
</p>
<table class="table" style="width: 100%; border-collapse: collapse; margin: 0 auto; border: 1px solid #dee2e6;">
    <thead>
        <tr style="background-color: #f8f9fa;">
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Customer_Name)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border-bottom: 1px solid #dee2e6;">
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Customer_Name)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td style="padding: 10px;">
                    <form asp-action="DeleteCustomer" method="post" style="display:inline;" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
