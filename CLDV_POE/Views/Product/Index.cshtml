@model IEnumerable<CLDV_POE.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="AddProduct">Create New</a>
</p>
<table class="table" style="width: 100%; border-collapse: collapse; margin: 0 auto; border: 1px solid #dee2e6;">
    <thead>
        <tr style="background-color: #f8f9fa;">
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                @Html.DisplayNameFor(model => model.Stock_Level)
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                Image
            </th>
            <th style="padding: 10px; text-align: left; border-bottom: 2px solid #dee2e6;">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border-bottom: 1px solid #dee2e6;">
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Stock_Level)
                </td>
                <td style="padding: 10px;">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Product_Name" style="width:100px;height:auto; border: 1px solid #dee2e6; padding: 2px;" />
                    }
                </td>
                <td style="padding: 10px;">
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />
                        <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />
                        <button type="submit" class="btn btn-danger" style="background-color: #dc3545; border: none; color: white; padding: 5px 10px; font-size: 14px; cursor: pointer;" onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
